<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/adapterClassement_cl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/adapterClassement_tv_number"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry"
            tools:text="1" />

        <ImageView
            android:id="@+id/adapterClassement_iv_displayImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/adapterClassement_tv_number"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adapterClassement_tv_firstText"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/adapterClassement_iv_displayImage"
            app:layout_constraintTop_toTopOf="@+id/adapterClassement_iv_displayImage"
            tools:text="A veeeeeeeeeeeeeeery looooong with first text " />

        <TextView
            android:id="@+id/adapterClassement_tv_secondText"
            android:textSize="12sp"
            android:textColor="@color/material_on_surface_disabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/adapterClassement_tv_firstText"
            app:layout_constraintStart_toStartOf="@+id/adapterClassement_tv_firstText"
            app:layout_constraintTop_toBottomOf="@+id/adapterClassement_tv_firstText"
            tools:text="Second text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

